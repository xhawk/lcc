html(ng-app="lccApp")
    head
        title Outotec LCC
        link(rel='stylesheet', href='libs/bootstrap/dist/css/bootstrap.min.css')

        // navigation
        .navbar.navbar-inverse(ng-controller="NavigationCtrl")
            .container
                .navbar-header
                    a(class='navbar-brand') {{nav.title}}
                .collapse.navbar-collapse
                    ul.nav.navbar-nav(ng-repeat="navitem in nav.items")
                        li(ng-class="isActive(navitem.ref)")
                            a(href="#{{navitem.ref}}") {{navitem.name}}

        // ng-view(angular) is responsible for the template content
        .container(ng-view)

        script(src='libs/angular/angular.min.js')
        script(src='libs/angular-resource/angular-resource.min.js')
        script(src='js/app.js')
        script(src='js/services.js')
        script(src='js/controllers/navigation.js')
        script(src='js/controllers/initialinfo.js')
        script(src='js/controllers/addproduct.js')
        script(src='js/filters.js')
        script(src='js/directives.js')